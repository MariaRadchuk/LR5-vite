//- components/header.pug
header.header
  .container
    a.header__logo(href="/")
      img(src="/src/assets/images/logo_eApteka.png" alt="eApteka")
    nav.header__nav
      ul
        li: a(href="/" class="active") Головна
        li: a(href="#promos") Акції
        li: a(href="#contacts") Контакти

    form.header__search#search-form(role="search")
      input#search-input(type="text" placeholder="Введіть назву" aria-label="Пошук ліків")

    .header__icons
      button.header__user(type="button" aria-label="Профіль")
        svg(width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2")
          path(d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2")
          circle(cx="12" cy="7" r="4")
      button.header__cart(type="button" aria-label="Кошик")
        svg(width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2")
          circle(cx="9" cy="21" r="1")
          circle(cx="20" cy="21" r="1")
          path(d="M1 1h4l2.5 12h11l2.5-12h4")